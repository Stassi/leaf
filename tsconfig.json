{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "checkJs": true,
    "esModuleInterop": true,
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "paths": {
      "@stassi/leaf": ["src/index.ts"]
    },
    "strict": true,
    "target": "ESNext"
  },
  "exclude": ["node_modules"],
  "extends": "@vercel/style-guide/typescript/node20",
  "include": [
    "public/tutorial/quick-start/**/*.js",
    "rollup.config.ts",
    "src/**/*.ts"
  ]
}
