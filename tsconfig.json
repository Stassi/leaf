{
  "extends": "@vercel/style-guide/typescript/node20",
  "compilerOptions": {
    "declaration": true,
    "outDir": "./dist",
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "esModuleInterop": true,
    "strict": true,
    "allowJs": true,
    "checkJs": true
  },
  "include": [
    "public/tutorial/quick-start/**/*.js",
    "rollup.config.ts",
    "src/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
